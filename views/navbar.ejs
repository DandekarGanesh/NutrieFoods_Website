   <script>

        // search result in for search box
        let displaySearchedProducts = () => {
            let cont = document.getElementById('searchedProducts');
            let inputSearch = document.getElementById('input-search');
            let input = inputSearch.value;
            cont.innerHTML = "";
    
            <% if(typeof cards != 'undefined') { %>
            if(input.trim().length != 0) {

                <%   for(let card in cards) {  %>
                  
                    if('<%- JSON.stringify(cards[card].title) %>'.trim().toUpperCase().includes(input.trim().toUpperCase()) ) { 
                        cont.innerHTML += "<a href='product/show/<%=cards[card]._id%>'> <div class='searched-row'> <div> <img class='small-img' src='<%= cards[card].url %>'> </img>  </div> <div class='searched-title'> <%= cards[card].title %> </div> </div> </a>";
                    }

                <% }  %>
            } 
            <% } %>

       }
     
    </script>
