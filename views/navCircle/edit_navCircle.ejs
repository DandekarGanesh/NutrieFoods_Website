<!-- admin header -->
<%- include("../Admin/heading.ejs") %>

<!-- admin left part  -->
<%- include("../Admin/leftPanel.ejs") %>



<style>
        
    .show_reviews {
        width: 100%;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
        border-radius: 10px;
        margin: 20px auto auto auto;
        min-height: 400px;
        padding-top: 20px;
        display: flex;
        
    }

    .show_reviews_img {
       height: 250px;
       width: 250px;
       border-radius: 50%;
    }


    .show_reviews_info {
       width: 60%;
       padding: 25px;
    }

    .show_reviews_img-sec {
        width: 40%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

</style>

<div class="window">

<h2 style="text-align: center;"> Edit navCircle </h2>
<div class="show_reviews" style="background-color: white;">

    

    <div class="show_reviews_info">
        <form method="POST"  action="/navCircle/edit/<%=navCircle._id%>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data"> 
            <div class="col-md-10">
                <label for="validationCustom02" class="form-label"> Title </label>
                <input type="text" value="<%=navCircle.title%>" name="NavCircle[title]" class="form-control" id="validationCustom02" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <br>
            <div class="col-md-10">
                <label for="validationCustom02" class="form-label"> Old Image </label>
                <div>
                    <img src="<%=navCircle.url%>" alt="" height="150px" width="150px">
                </div>
            </div>
 
            <br> <br>

            <label for="" class="form-label"> New Image </label> <br> 
            <input type="file" name="NavCircle[url]" id="validationCustomUsername">
            
            <div class="col-md-10">
                <br> 
                <div>
                    <img alt="Selected image"  id="blah" height="150px" width="150px">
                </div>
            </div>
       
            <br>
        <button class="btn btn-success"> Edit </button> 
        </form>
        <br> <br> 
    </div>
</div>

</div>

<!-- admin footer  -->
<%- include("../Admin/footer.ejs") %>
